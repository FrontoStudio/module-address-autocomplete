<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="shipping">
            <group id="fronto_autocomplete" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Address Autocomplete</label>
                <field id="enable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="google_api_key" translate="label" sortOrder="120" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Google API Key</label>
                    <comment><![CDATA[<a href="https://developers.google.com/maps/documentation/javascript/examples/places-autocomplete-addressform" target="_blank">Click here</a> to get Google API Key]]> </comment></field>
            </group>
            <group id="origin">
                   <field id="latitude" translate="label" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Google Latitude</label>
	                </field>
	                <field id="longitude" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>Google Longitude</label>
                    </field>
            </group>
        </section>
    </system>
</config>
